#!/usr/bin/env ruby
require 'rubygems'
require 'rubygems/gem_runner'
require 'rubygems/exceptions'
require 'bundler'
Bundler.setup

require 'docopt'

require 'wow'
require 'wow/command_parser'
begin
  $LOAD_PATH.push File.expand_path('../../lib', __FILE__)
  Wow::CommandParser.parse(ARGV).run
rescue Docopt::Exit => e
  puts e.message
rescue Wow::Error => e
  puts e.error_message
end
